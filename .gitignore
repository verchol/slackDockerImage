version: '1.0'
#build flow for fx-api
steps:
  dependencies:
    image: node:latest
    fail-fast: true
    commands:
      #- npm prune
      - npm install --unsafe-perm

      #- npm install bower
      #- npm gulp install

  unit tests:
    image: node:latest
    fail-fast: false
    commands:
      #- npm install -g better-npm-run
      -  npm install -g mocha
      -  echo unit test started
      -  npm run test

  build-step:
     type: build
     fail-fast: false
     dockerfile: Dockerfile
     image-name: verchol/slack
     tag : codefresh

#build volume wtih source code
#  build-dependecies-and-source-code-only:
  #     type: build
  #     fail-fast: false
  #     dockerfile: Dockerfile.npm
  #     image-name: fxempire/fx-api
  #     tag : npm

  after-build:
      image: verchol/slack:latest
      environment:
         - MSG_TEXT="build passed"
      commands:
         - npm start

